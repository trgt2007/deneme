{
  "name": "flashloan-arbitrage-bot",
  "version": "2.0.0",
  "description": "Enhanced Multi-DEX Flashloan Arbitrage Bot - Production Ready",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-assets",
    "build:clean": "rm -rf build && npm run build",
    "copy-assets": "if exist contracts\\artifacts xcopy contracts\\artifacts build\\artifacts /E /I /Q || echo Assets copied",
    "test": "mocha --require ts-node/register test/**/*.test.ts --timeout 30000",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "nyc npm run test",
    "compile": "hardhat compile",
    "deploy:contracts": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:bot": "chmod +x deploy.sh && ./deploy.sh",
    "monitor": "pm2 monit",
    "logs": "pm2 logs arbitrage-bot",
    "status": "pm2 status",
    "stop": "pm2 stop arbitrage-bot",
    "restart": "pm2 restart arbitrage-bot",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "security": "./security-check.sh",
    "backup": "./backup.sh",
    "health": "ts-node scripts/health-check.ts"
  },
  "dependencies": {
    "@aave/core-v3": "^1.17.2",
    "@openzeppelin/contracts": "^5.0.0",
    "@uniswap/v3-periphery": "^1.4.3",
    "@uniswap/v3-sdk": "^3.10.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "ioredis": "^5.6.1",
    "node-telegram-bot-api": "^0.64.0",
    "pm2": "^5.3.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.10.0",
    "chai": "^4.2.0",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typechain": "^8.3.0",
    "typescript": "^5.3.2"
  }
}
